input::-ms-clear,
input::-ms-reveal
	display none

input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration
	display none

input[type=number]::-webkit-inner-spin-button,
input[type=number]::-webkit-outer-spin-button
	-webkit-appearance none
	margin 0

.input
	&:focus,
	&:active
		&::-webkit-input-placeholder
			opacity 0
		&:-moz-placeholder
			opacity 0
		&::-moz-placeholder
			opacity 0
		&:-ms-placeholder
			opacity 0
		&:-ms-input-placeholder
			opacity 0

	&::-webkit-input-placeholder
		transition opacity .3s ease-in-out
	&:-moz-placeholder
		transition opacity .3s ease-in-out
	&::-moz-placeholder
		transition opacity .3s ease-in-out
	&:-ms-placeholder
		transition opacity .3s ease-in-out
	&:-ms-input-placeholder
		transition opacity .3s ease-in-out

	&[disabled]
		user-select none
		pointer-events none

	&_gray
		background-color #f9f9f9
		display inline-block
		vertical-align middle
		border 0
		width 100%
		height 48px
		line-height 48px
		padding 0 22px
		font-size 12px
		border-radius 2px
		color #171717
		text-align left
		-webkit-appearance none
		box-shadow none
		transition background-color 0.3s ease-in-out, box-shadow 0.3s ease-in-out
		&:focus,
		&:active
			background-color #f3ebdc

		&::-webkit-input-placeholder
			font-size 12px
			color #787878
		&:-moz-placeholder
			font-size 12px
			color #787878
		&::-moz-placeholder
			font-size 12px
			color #787878
		&:-ms-placeholder
			font-size 12px
			color #787878
		&:-ms-input-placeholder
			font-size 12px
			color #787878

		.is-error &
			box-shadow inset 0 0 1px 1px #cc2c2c
			background-color #f8eeef

	&_modal
		background-color #f5f5f5
		display inline-block
		vertical-align middle
		border 1px solid #e3e3e3
		width 100%
		padding 0 5px
		font-size 12px
		border-radius 5px
		color #171717
		text-align left
		-webkit-appearance none
		box-shadow none
		transition background-color 0.3s ease-in-out, box-shadow 0.3s ease-in-out
		@media $noPhones
			height 54px
			line-height 54px
		@media $phones
			height 40px
			line-height 40px
		&:focus,
		&:active
			background-color #f3ebdc

		&::-webkit-input-placeholder
			font-size 12px
			color #787878
		&:-moz-placeholder
			font-size 12px
			color #787878
		&::-moz-placeholder
			font-size 12px
			color #787878
		&:-ms-placeholder
			font-size 12px
			color #787878
		&:-ms-input-placeholder
			font-size 12px
			color #787878


		.is-error &
			box-shadow inset 0 0 1px 1px #cc2c2c
			background-color #f8eeef

	&_col
		border 0
		width 58px
		height 48px
		line-height 48px
		font-size 18px
		color #1e1e1e
		font-weight bold
		background-color transparent
		text-align center

	&_rounded
		border 1px solid #e3e8f0
		border-radius 17px
		height 35px
		line-height 32px
		background-color #f8f8f8
		font-size 12px
		padding 0 15px
		color #343e5c

		&::-webkit-input-placeholder
			color #b9bfd3
		&:-moz-placeholder
			color #b9bfd3
		&::-moz-placeholder
			color #b9bfd3
		&:-ms-placeholder
			color #b9bfd3
		&:-ms-input-placeholder
			color #b9bfd3

		&.input_middle
			@media $noTablet
				width 160px
			@media $onlyTablet
				width 200px
			@media $phones
				width 100%
		&.input_small
			@media $noTablet
				width 64px
			@media $onlyTablet
				width 90px
			@media $phones
				width calc(50% - 10px)

