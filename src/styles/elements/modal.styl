.modal
	position fixed
	top 0
	right 0
	bottom 0
	left 0
	z-index -1
	display none
	overflow hidden
	outline 0
	min-width 320px

	&__inner
		padding 15px 15px 35px

	&__content
		position relative
		top 0
		background-color #f5f5f5
		margin 0 auto
		border-radius 9px
		@media $noPhones
			max-width 750px
			padding 17px 27px 20px
		@media $phones
			max-width 480px
			padding 12px 10px 10px

	&__close
		position absolute
		right 22px
		top 22px
		width 16px
		height 16px
		cursor pointer

	&__title
		color #171717
		font-weight bold
		text-transform uppercase
		text-align center
		position relative
		width 100%
		@media $noPhones
			font-size 32px
			line-height 2.632
			margin-top 52px
			margin 52px auto 73px
			max-width 424px
			padding 33px 0 3px
			&::before
			&::after
				content ''
				position absolute
				top 0
				bottom 0
				z-index 0
				background-repeat no-repeat
				background-position center left
				background-size contain
			&::before
				left 0
				width 119px
				background-image: url("/img/popup/title-img_plate.png")
			&::after
				right 0
				width 52px
				background-image: url("/img/popup/title-img_forks.png")
		@media $phones
			font-size 20px
			margin-top 52px
			margin 22px auto 10px
		span
			position relative
			z-index 1
			@media $noPhones
				padding-left 20px
		& + .modal__sub-title
			@media $noPhones
				margin-top -43px
			@media $phones
				margin-top -10px

	&__sub-title
		font-size 15px
		color #a3a3a3
		margin 13px 0 33px
		text-align center
		letter-spacing -1px
		@media $noPhones
			margin 13px 0 33px
		@media $phones
			margin 0 0 15px

	&__form
		background-color #fcfcfc
		border-radius 10px
		border 1px solid #e1e1e1
		@media $noPhones
			padding 38px 34px 30px
		@media $phones
			padding 18px 10px 20px

	&_registration
		@media $noPhones
			.modal
				&__title
					padding 11px 0 3px
					margin 0 auto 16px
					&::after
						right 30px
						width 42px
						top -18px
					&::before
						left 10px
				&__form
					padding 20px 30px 30px
			.form
				&__part
					flex-basis calc(50% - 30px)
					max-width calc(50% - 30px)
					& + .form__part::before
						left -30px
				&__element-label > span
					margin-bottom 3px
				&__row + .form__row
					margin-top 10px
		.form__submit
			flex-basis 100%
			max-width 100%
			text-align center!important

	&_auth
		@media $phones
			.form
				&__title
					display none
					order 1

				&__part
					&:nth-child(1)
						order 2
					&:nth-child(2)
						order 1

.modal-backdrop
	position fixed
	top 0
	right 0
	bottom 0
	left 0
	z-index 99
	background-color #000
	opacity .5
