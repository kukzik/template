.textarea
	resize none

	&[disabled]
		user-select none
		pointer-events none

	&.textarea_gray
		background #f9f9f9
		display inline-block
		vertical-align middle
		width 100%
		height 170px
		font-size 12px
		padding 17px 22px
		color #171717
		border 0
		text-align left
		-webkit-appearance none
		transition background-color 0.3s ease-in-out
		&:focus,
		&:active
			background-color #f3ebdc

			&::-webkit-input-placeholder
				opacity 0
			&:-moz-placeholder
				opacity 0
			&::-moz-placeholder
				opacity 0
			&:-ms-placeholder
				opacity 0
			&:-ms-input-placeholder
				opacity 0

		&::-webkit-input-placeholder
			font-size 12px
			color #787878
			transition opacity .3s ease-in-out
		&:-moz-placeholder
			font-size 12px
			color #787878
			transition opacity .3s ease-in-out
		&::-moz-placeholder
			font-size 12px
			color #787878
			transition opacity .3s ease-in-out
		&:-ms-placeholder
			font-size 12px
			color #787878
			transition opacity .3s ease-in-out
		&:-ms-input-placeholder
			font-size 12px
			color #787878
			transition opacity .3s ease-in-out