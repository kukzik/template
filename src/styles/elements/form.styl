.form
	&.form_contacts
		display flex
		flex-wrap nowrap
		justify-content space-between
		@media $noTablet
			flex-direction row
			margin 155px 0 137px
		@media $tablet
			flex-direction column
		@media $onlyTablet
			margin 100px 0 85px
		@media $phones
			margin 0 0 50px

		.form
			&__form
				padding-top 26px

	&.form_modal
		display flex
		flex-direction row
		flex-wrap wrap
		justify-content space-between
		.form
			&__row
				& + .form__row
					margin-top 14px

			&__submit
				@media $noPhones
					text-align right
				@media $phones
					text-align center
					padding-top 20px

		.form-social
			@media $phones
				&::before
					content 'Или войдите с помощью'
					display block
					text-align center
					font-size 18px
					color #979797
					letter-spacing -.3px
					margin-bottom 20px
					flex-basis 100%

	&__part
		@media $noPhones
			flex-basis calc(50% - 43px)
			max-width calc(50% - 43px)
			position relative
		@media $phones
			flex-basis 100%
			max-width 100%
		& + &
			@media $noPhones
				&::before
					content ''
					position absolute
					width 2px
					top 15px
					bottom 15px
					left -43px
					background-color #eee

	&__or
		@media $noPhones
			font-size 15px
			color #a3a3a3
			font-style italic
			position absolute
			left -43px
			top calc(50% - 15px)
			transform translate(-50%,-50%)
			background-color #fcfcfc
			z-index 1
			padding 8px 0
			&::before
				content 'или'

	&__title
		font-size 18px
		color #979797
		letter-spacing -.3px
		margin-bottom 20px
		flex-basis 100%

	&__footnote
		font-size 15px
		color #979797
		@media $phones
			text-align center

	&__text
		letter-spacing -.2px

	&__link
		font-size 16px
		color #000
		font-weight bold
		text-transform uppercase

	&__info
		@media $noTablet
			flex-basis 34%
			max-width 34%
			padding-left 8px

	&__info-head
		font-size 14px
		color #2d2b27
		font-weight bold
		text-transform uppercase
		line-height 0.988
		letter-spacing 1.7px
		margin-bottom 27px
		@media $tablet
			text-align center

	&__info-text
		font-size 14px
		color #171717
		line-height 1.5
		letter-spacing .6px
		& + &
			margin-top 20px

	&__info-title
		color #2d2b27
		font-weight bold
		letter-spacing 1px

	&__info-link
		text-decoration none
		color #171717

	&__form
		@media $noTablet
			flex-basis 58%
			max-width 58%

	&__row
		display flex
		flex-wrap nowrap
		@media $noTablet
			flex-direction row
		@media $tablet
			flex-direction column

		& + &
			margin-top 30px

	&__submit
		padding-top 32px

	&__element
		position relative
		@media $noTablet
			flex-basis 100%
			max-width 100%
			& + &
				margin-left 30px
		@media $tablet
			& + &
				margin-top 30px

	&__element-error
		opacity 0
		font-size 12px
		color #bb5465
		line-height 1.667
		position absolute
		left 0
		right 0
		transition opacity .3s ease-in-out
		.is-error &
			opacity 1

	&__element-label
		display inline-block
		width 100%
		color #a3a3a3
		@media $noPhones
			font-size 15px
		@media $phones
			font-size 12px
		& > span
			display inline-block
			vertical-align top
			width 100%
			margin-bottom 13px
			@media $noPhones
				margin-bottom 13px
			@media $phones
				margin-bottom 10px
		.is-error &
			color #bb5465


.form-social
	@media $noPhones
		padding-top 30px
	@media $phones
		padding-top 20px
		margin-bottom 15px

	&__item
		display inline-block
		position relative
		padding-left 57px
		border-radius 9px
		height 54px
		width 100%
		line-height 54px
		overflow hidden
		text-decoration none
		transition background-color .3s ease-in-out
		@media $noPhones
			margin-bottom 40px
		@media $phones
			margin-bottom 10px

	&__item_vk
		background-color #3c5a98
		&:hover
			background-color #304b83
		.form-social
			&__item-icon
				background-color #2c4881a6

	&__item_gp
		background-color #cf573e
		&:hover
			background-color #bf4f37
		.form-social
			&__item-icon
				background-color #b64b34a6

	&__item-icon
		position absolute
		top 0
		bottom 0
		left 0
		width 57px
		text-align center
		&::before
			content ''
			display inline-block
			height 100%
			vertical-align middle
		.icon
			max-width 35px
			max-height 35px
			vertical-align middle

	&__item-text
		font-size 15px
		color #ffffff
		padding-left 18px
		letter-spacing -.3px