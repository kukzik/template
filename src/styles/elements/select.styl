.select
	position relative
	display inline-block
	vertical-align middle
	user-select none

	&__data
		display none

	&__trigger
		display inline-block
		font-size 10px
		color #343e5c
		text-transform uppercase
		line-height 1
		position relative
		cursor pointer
		padding 12px 26px 12px 12px
		transition border .2s ease-in-out
		&:active
			background-color #f8f8f8
		@media $noDevices
			border-top-left-radius 5px
			border-top-right-radius 5px
			border 1px solid #fff
			border-bottom 0
		@media $devices
			border-radius 5px
			border 1px solid #eee
		&::after
			content ''
			position absolute
			right 8px
			top 45%
			width 4px
			height 4px
			border 2px solid #343e5c
			border-top 0
			border-right 0
			transform translateY(-50%) rotate(-45deg)
			transition transform .2s
			transition-timing-function ease-in-out
		.is-opened &
			background-color #fff
			border-color #eee
			@media $devices
				border-bottom-left-radius 0
				border-bottom-right-radius 0
				border-bottom-color #fff
			&::after
				top 50%
				transform translateY(-50%) rotate(-225deg)

	&__dropdown
		position absolute
		top 100%
		left 0
		right 0
		max-height 200px
		z-index 2
		font-size 0
		display none
		border 1px solid #eee
		border-top 0
		background-color #fff
		border-bottom-left-radius 5px
		border-bottom-right-radius 5px
		opacity 0
		overflow-x hidden
		overflow-y auto
		transition opacity .2s ease-in-out
		// @media $noDevices
		@media $devices
			margin-top -1px
			border-top 0
		.is-opened &
			opacity 1

	&__dropdown-item
		display inline-block
		width 100%
		font-size 10px
		color #343e5c
		text-transform uppercase
		padding 15px 10px
		border-top 1px solid #eee
		cursor pointer
		transition background-color .3s ease-in-out
		&:hover
		&:active
			background-color #f8f8f8

	&_modal
		width 100%
		&.is-opened
			.select__trigger
				border-color #d7d7d7
				border-bottom-color #f5f5f5
				border-bottom-left-radius 0
				border-bottom-right-radius 0
		.select
			&__trigger
				background-color #f5f5f5
				display inline-block
				vertical-align middle
				border 1px solid #e3e3e3
				width 100%
				font-size 12px
				border-radius 5px
				color #171717
				text-align left
				-webkit-appearance none
				text-transform none
				box-shadow none
				transition background-color 0.3s ease-in-out, box-shadow 0.3s ease-in-out
				@media $noPhones
					padding 20px 34px 20px 12px
				@media $phones
					padding 13px 34px 13px 12px
				&:active
					background-color #f3ebdc
				&::after
					right 18px
					top 54%
					width 6px
					height 6px
					border-width 1px
					border-color #3b3b3b
					@media $noPhones
						top 54%
					@media $phones
						top 49%

			&__dropdown
				background-color #f5f5f5
				height 136px
				border-color #d7d7d7
				border-top-color #f5f5f5

			&__dropdown-item
				background-color #f5f5f5
				color #a3a3a3
				font-size 12px
				text-transform none
				border 0
				padding 10px
				transition color .3s ease-in-out
				&:hover
				&:active
					color #000

